.banner
  width 100%
  height 100%
  background-color #ACACAC

.sidebar
  grid-row 1 / 3
  padding 20px 1rem
  background-color snow

.content
  grid-column 2 / 3

.toolbar 
  display: flex
  justify-content: space-between
  > .modes
    display: flex
    align-items: center
    .btn
      color: primary
    .ico
      color: inherit
    .ico-grid
      width: 20px
      height: 20px
    .ico-list
      width: 40px
      height: 40px
  .list & .btn-grid,
  .grid & .btn-list
    color: secondary
  .grid & .btn-grid,
  .list & .btn-list
    cursor: default