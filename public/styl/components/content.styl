.banner
  width 100%
  height 100%
  background-color #ACACAC

.sidebar
  grid-row 1 / 3
  padding 20px 1rem
  background-color snow
  .cms-category &
    background-color: brightness;
    border: 1px solid snow;
    @media (max-width: 568px){
      margin-bottom: 20px
    }

.content
  grid-column 2 / 3

.toolbar 
  display: flex
  justify-content space-between
  align-items: center
  gap 0 2vw
  @media (max-width: 568px){
    margin-bottom: 50px
  }
  > .modes
    display: flex
    align-items: center
    @media (max-width: 568px){
      display none
    }
    .btn
      color: primary
    .ico
      color: inherit
    .ico-grid
      width: 20px
      height: 20px
    .ico-list
      width: 40px
      height: 40px
  .list & .btn-grid,
  .grid & .btn-list
    color: secondary
  .grid & .btn-grid,
  .list & .btn-list
    cursor: default